@model mvcGuitarists.Models.GuitaristTable

@{
    ViewBag.Title = "Delete";
}

<div class="text-left">
    <h2>Delete Artist</h2>
    <h3>Are you sure you want to delete this artist from the database?</h3>
</div>
<hr />

<div class="container">
    <div class="row">

        <div class="col-md-4">
            <img src="@Url.Content(Model.Image)" height="300" width="300" />
        </div>

        <div class="col-md-8">
            <h3>@Html.DisplayFor(m => m.Name)</h3>
            <dl>
                <dt>
                    @Html.DisplayNameFor(m => m.Roles):
                </dt>
                <dd>
                    @Html.DisplayFor(m => m.Roles)
                </dd>
                <dt>
                    @Html.DisplayNameFor(m => m.MemberOf):
                </dt>
                <dd>
                    @Html.DisplayFor(m => m.MemberOf)
                </dd>
                <dt>
                    @Html.DisplayNameFor(m => m.Genre):
                </dt>
                <dd>
                    @Html.DisplayFor(m => m.Genre)
                </dd>
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div>
                    <input type="submit" value="Delete Artist" class="btn" />
                    &nbsp; &nbsp;
                    <a href='@Url.Action("Details","Home", new { id = Model.Id })' class="btn">Cancel</a>
                </div>
            }
        </div>
    </div>
</div>